{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "react",
        "react-native",
        "import"
    ],
    "globals": {
        "Promise": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "block-scoped-var": 2,
        "curly": 2,
        "dot-location": [2, "property"],
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-labels": 2,
        "no-eval": 2,
        "no-extra-bind": 2,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-self-compare": 2,
        "no-throw-literal": 2,
        "no-unused-expressions": 2,
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "no-with": 2,
        "radix": 2,
        "yoda": [2, "never"],

        "strict": [2, "global"],

        "no-catch-shadow": 2,
        "no-label-var": 2,
        "no-shadow-restricted-names": 2,
        "no-shadow": 2,
        "no-use-before-define": [2, "nofunc"],

        "no-mixed-requires": 2,
        "no-path-concat": 2,

        "array-bracket-spacing": [2, "never"],
        "brace-style": [2, "1tbs"],

        "comma-spacing": 2,
        "comma-style": [2, "last"],
        "consistent-this": [1, "self"],
        "eol-last": 2,
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "key-spacing": 2,
        "linebreak-style": [2, "unix"],
        "new-cap": [2, {
            "capIsNewExceptions": ["Component", "Route", "Map"]
        }],
        "no-array-constructor": 2,
        "no-multiple-empty-lines": 2,
        "no-nested-ternary": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 2,
        "object-curly-spacing": 2,
        "quotes": [2, "double", "avoid-escape"],
        "semi-spacing": 2,
        "semi": [2, "always"],
        "keyword-spacing": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [2, {
            "anonymous": "always",
            "named": "never"
        }],
        "space-in-parens": [2, "never"],
        "space-infix-ops": 2,
        "space-unary-ops": 2,

        "no-var": 2,
        "prefer-const": 2,

        "import/export": 2,
        "import/no-named-as-default": 2,
        "import/no-named-as-default-member": 2,
        "import/no-mutable-exports": 2,
        "import/first": 2,
        "import/no-duplicates": 2,

        "react/display-name": 2,
        "react/jsx-no-undef": 2,
        "react/jsx-uses-vars": 2,
        "react/jsx-uses-react": 2,
        "react/no-unknown-property": [2, {
            "ignore": ["class"]
        }],
        "react/sort-comp": 2,
        "jsx-quotes": [2, "prefer-double"],
        "no-underscore-dangle": 0,
        "no-console": 0,

        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2,
        "react-native/no-inline-styles": 2,
        "react-native/no-raw-text": 2
    }
}
